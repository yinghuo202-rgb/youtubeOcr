<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Thickness x:Key="CardPadding">16</Thickness>
    <CornerRadius x:Key="WindowCornerRadius">16</CornerRadius>
    <CornerRadius x:Key="CardCornerRadius">10</CornerRadius>
    <CornerRadius x:Key="ControlCornerRadius">8</CornerRadius>

    <!-- Flat pastel backgrounds -->
    <SolidColorBrush x:Key="GlassCardBrush" Color="{StaticResource CardBackground}" />
    <SolidColorBrush x:Key="GlassInputBrush" Color="{StaticResource InputBackground}" />

    <!-- Subtle pixel-ish shadow -->
    <Shadow x:Key="SoftShadow"
            Brush="#14000000"
            Offset="0,6"
            Radius="12"
            Opacity="0.35" />

    <!-- Buttons -->
    <Style x:Key="GradientButtonStyle" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource TextMain}" />
        <Setter Property="Background" Value="{StaticResource PrimaryButtonBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Shadow" Value="{StaticResource SoftShadow}" />
        <Setter Property="BorderColor" Value="{StaticResource LineSoft}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="1.02" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.98" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.5" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="GhostButtonStyle" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        <Setter Property="Padding" Value="14,10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BorderColor" Value="{StaticResource LineSoft}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.98" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Cards -->
    <Style x:Key="GlassCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource GlassCardBrush}" />
        <Setter Property="Stroke" Value="{StaticResource LineSoftBrush}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Padding" Value="{StaticResource CardPadding}" />
        <Setter Property="Shadow" Value="{StaticResource SoftShadow}" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="10" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GlassEntryStyle" TargetType="Entry">
        <Setter Property="Background" Value="{StaticResource GlassInputBrush}" />
        <Setter Property="TextColor" Value="{StaticResource TextMain}" />
    </Style>

    <Style x:Key="GlassEditorStyle" TargetType="Editor">
        <Setter Property="Background" Value="{StaticResource GlassInputBrush}" />
        <Setter Property="TextColor" Value="{StaticResource TextMain}" />
        <Setter Property="HeightRequest" Value="120" />
    </Style>

    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="Background" Value="{StaticResource BadgeLilacBrush}" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="BorderColor" Value="{StaticResource LineSoft}" />
        <Setter Property="BorderWidth" Value="1" />
    </Style>

    <Style x:Key="NavButtonSelectedStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
        <Setter Property="Background" Value="{StaticResource NavSelectedBrush}" />
        <Setter Property="TextColor" Value="{StaticResource TextMain}" />
    </Style>

    <!-- Progress -->
    <Style x:Key="GradientProgressBar" TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="HeightRequest" Value="8" />
        <Setter Property="BackgroundColor" Value="{StaticResource LineSoft}" />
    </Style>
</ResourceDictionary>
