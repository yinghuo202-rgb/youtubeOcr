<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <CornerRadius x:Key="CardCornerRadius">10</CornerRadius>
    <CornerRadius x:Key="ControlCornerRadius">8</CornerRadius>
    <Thickness x:Key="CardPadding">16</Thickness>
    <Thickness x:Key="SectionSpacing">14</Thickness>
    <Thickness x:Key="CardSpacing">14</Thickness>
    <Thickness x:Key="OuterPadding">20</Thickness>

    <Shadow x:Key="PixelShadow"
            Brush="{StaticResource ShadowBrush}"
            Offset="0,4"
            Radius="10"
            Opacity="0.16" />

    <!-- Base typography -->
    <Style x:Key="BaseLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="Segoe UI Rounded, Segoe UI, Microsoft YaHei UI, system-ui" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Label" BasedOn="{StaticResource BaseLabelStyle}" />

    <Style x:Key="TitleLabelStyle" TargetType="Label" BasedOn="{StaticResource BaseLabelStyle}">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="SectionTitleLabelStyle" TargetType="Label" BasedOn="{StaticResource BaseLabelStyle}">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="CardTitleLabelStyle" TargetType="Label" BasedOn="{StaticResource BaseLabelStyle}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
    </Style>

    <Style x:Key="HintLabelStyle" TargetType="Label" BasedOn="{StaticResource BaseLabelStyle}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource TextHint}" />
    </Style>

    <Style x:Key="BadgeLabelStyle" TargetType="Label" BasedOn="{StaticResource BaseLabelStyle}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
    </Style>

    <!-- Buttons -->
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryButton}" />
        <Setter Property="FontFamily" Value="Segoe UI Rounded, Segoe UI, Microsoft YaHei UI, system-ui" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="14,10" />
        <Setter Property="BorderColor" Value="{StaticResource BorderColor}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <Setter.Value>
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="PointerOver">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{StaticResource SoftLilac}" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{StaticResource HighlightOrange}" />
                                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}" />

    <Style x:Key="PrimaryActionButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="BackgroundColor" Value="{StaticResource HighlightOrange}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="BorderColor" Value="{StaticResource HighlightOrange}" />
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBackground}" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
    </Style>

    <Style x:Key="GhostButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="BackgroundColor" Value="{StaticResource SoftLilac}" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
    </Style>

    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="Segoe UI Rounded, Segoe UI, Microsoft YaHei UI, system-ui" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="BackgroundColor" Value="{StaticResource SoftLilac}" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="BorderColor" Value="{StaticResource BorderColor}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="ContentLayout" Value="Left,10" />
    </Style>

    <Style x:Key="NavButtonSelectedStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
        <Setter Property="BackgroundColor" Value="{StaticResource HighlightIndigo}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="BorderColor" Value="{StaticResource HighlightIndigo}" />
    </Style>

    <!-- Inputs -->
    <Style x:Key="BaseEntryStyle" TargetType="Entry">
        <Setter Property="FontFamily" Value="Segoe UI Rounded, Segoe UI, Microsoft YaHei UI, system-ui" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextHint}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="HeightRequest" Value="40" />
    </Style>

    <Style TargetType="Entry" BasedOn="{StaticResource BaseEntryStyle}" />

    <Style x:Key="BaseEditorStyle" TargetType="Editor">
        <Setter Property="FontFamily" Value="Segoe UI Rounded, Segoe UI, Microsoft YaHei UI, system-ui" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextHint}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <Style TargetType="Editor" BasedOn="{StaticResource BaseEditorStyle}" />

    <!-- Cards & capsules -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBackground}" />
        <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Padding" Value="{StaticResource CardPadding}" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="{StaticResource CardCornerRadius}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Shadow" Value="{StaticResource PixelShadow}" />
    </Style>

    <Style x:Key="MutedCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
        <Setter Property="BackgroundColor" Value="{StaticResource SoftLilac}" />
        <Setter Property="Shadow" Value="{x:Null}" />
    </Style>

    <Style x:Key="FieldWrapperStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBackground}" />
        <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="{StaticResource ControlCornerRadius}" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PillBadgeStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource AccentMint}" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="12" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TagPinkStyle" TargetType="Border" BasedOn="{StaticResource PillBadgeStyle}">
        <Setter Property="BackgroundColor" Value="{StaticResource SoftPink}" />
    </Style>

    <!-- Pages -->
    <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0" />
        <Setter Property="BackgroundColor" Value="{StaticResource AppBackground}" />
    </Style>

    <Style TargetType="ScrollView">
        <Setter Property="Padding" Value="0" />
    </Style>
</ResourceDictionary>
